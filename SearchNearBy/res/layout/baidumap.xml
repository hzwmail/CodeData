<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/bg_title_bar"
                  android:gravity="center">
        <ImageButton android:id="@+id/informationBack" android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:background="@drawable/ic_nav_back"
                     android:layout_marginLeft="10dp"></ImageButton>
        <TextView android:id="@+id/information" android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                   android:text="地图详情"
                  android:layout_weight="1"
                  android:textColor="#ffffff"
                  android:layout_marginLeft="85dp"></TextView>
        <ImageButton android:id="@+id/refresh" android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:background="@drawable/u125_normal"
                    ></ImageButton>
        <ImageButton android:id="@+id/change" android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:background="@drawable/ic_action_map"
                ></ImageButton>

    </LinearLayout>



            <LinearLayout android:id="@+id/mapview" android:layout_width="match_parent"
                      android:layout_height="wrap_content">



                 <Button android:layout_height="wrap_content"
                              android:id="@+id/radio1"
                              android:layout_width="wrap_content"
                              android:background="@drawable/radio"
                              android:text="驾车"
                              android:textColor="#000000"
                              android:gravity="center"
                              android:layout_weight="1"
                              android:button="@null"
                         >
                 </Button>
                 <Button android:layout_height="wrap_content"
                              android:id="@+id/radio2"
                              android:layout_width="wrap_content"
                              android:background="@drawable/radio"
                              android:layout_weight="1"
                              android:text="公交"
                              android:textColor="#000000"
                              android:gravity="center"
                              android:button="@null"
                         >
                 </Button>
                 <Button android:layout_height="wrap_content"
                              android:id="@+id/radio3"
                              android:layout_width="wrap_content"
                              android:background="@drawable/radio"
                               android:layout_weight="1"
                              android:text="步行"
                              android:gravity="center"
                              android:textColor="#000000"
                              android:button="@null"
                         >
                 </Button>


            </LinearLayout>



             <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"

                     />



</LinearLayout>